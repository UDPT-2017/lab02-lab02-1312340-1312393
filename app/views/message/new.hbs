<form class="form-horizontal col-xs-6 col-md-offset-3" method="post">
    <h2 class = "col-md-offset-1">Soạn Tin nhắn</h2>
    <div class="form-group">
        <label for="inputTo" class="control-label col-xs-2">Người nhận</label>
        <div class="col-xs-8">
            <input name="to" type="text" class="form-control" id="inputEmail" placeholder="email">
        </div>
    </div>
    <div class="form-group">
        <label for="inputTitle" class="control-label col-xs-2">Title</label>
        <div class="col-xs-8">
            <input name="title" type="text" class="form-control" id="inputTitle" placeholder="Title">
        </div>
    </div>
    <div class="form-group">
        <label for="inputContent" class="control-label col-xs-2">Nội dung</label>
        <div class="col-xs-8">
            <textarea name="content" type="text" class="form-control" id="inputContent" placeholder="Your message"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-4 col-xs-10">
            <button type="submit" class="btn btn-info">Submit</button>
            <a class="btn btn-info" href="/">Back</a>
        </div>
    </div>
</form>